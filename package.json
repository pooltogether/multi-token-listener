{
  "name": "@pooltogether/multi-token-listener",
  "version": "1.1.0",
  "description": "PoolTogether MultiTokenListener",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf cache/ artifacts/",
    "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
    "coverage": "HIDE_DEPLOY_LOG=true OPTIMIZER_DISABLED=true hardhat coverage",
    "deploy": "hardhat deploy --write true --network",
    "verify": "hardhat etherscan-verify --license MIT --solc-input --network",
    "etherscan-verify": "hardhat etherscan:verify --network",
    "format": "prettier --config .prettierrc --write **/*.ts",
    "format:file": "prettier --config .prettierrc --write",
    "hint": "solhint \"contracts/**/*.sol\"",
    "start-fork": "FORK_ENABLED=true hardhat node",
    "run-fork": "hardhat run ./scripts/createTokenFaucets.ts --network localhost",
    "test": "yarn clean && HIDE_DEPLOY_LOG=true OPTIMIZER_DISABLED=true hardhat test"
  },
  "dependencies": {
    "@pooltogether/pooltogether-contracts": "^3.3.10"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.3",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "^3.4.0",
    "@openzeppelin/hardhat-upgrades": "1.6.0",
    "@pooltogether/pooltogether-generic-registry": "latest",
    "@pooltogether/pooltogether-proxy-factory-package": "^1.0.1",
    "@types/chai": "4.2.15",
    "@types/debug": "4.1.5",
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.32",
    "chai": "4.3.4",
    "chalk": "^4.1.1",
    "debug": "4.3.1",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.0.32",
    "hardhat": "2.1.1",
    "hardhat-abi-exporter": "2.1.2",
    "hardhat-dependency-compiler": "^1.1.1",
    "hardhat-deploy": "0.7.0-beta.47",
    "hardhat-deploy-ethers": "0.3.0-beta.7",
    "hardhat-gas-reporter": "1.0.4",
    "prettier": "2.2.1",
    "solhint": "3.3.3",
    "solidity-coverage": "0.7.16",
    "ts-generator": "0.1.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  },
  "peerDependencies": {},
  "files": [
    "LICENSE",
    "abis/**",
    "build/**",
    "artifacts/**",
    "contracts/**",
    "deployments/**",
    "deploy/**"
  ]
}
